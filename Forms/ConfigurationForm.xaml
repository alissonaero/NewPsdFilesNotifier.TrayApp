<Window x:Class="PsPrintNotifier.TrayApp.Forms.ConfigurationForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Configuration" Height="300" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Folder Path -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">
            <Label Content="Folder Path:" Width="120" VerticalAlignment="Center"/>
            <TextBox x:Name="FolderPathTextBox" Width="280" Height="28" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Button x:Name="SelectFolderButton" Content="..." Width="30" Height="28" Click="SelectFolderButton_Click"/>
        </StackPanel>

        <!-- WhatsApp Contact -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center">
            <Label Content="WhatsApp Contact:" Width="120" VerticalAlignment="Center"/>
            <TextBox x:Name="WhatsAppTextBox" Width="280" Height="28" VerticalAlignment="Center" Margin="0,0,10,0"
                     MaxLength="15"
                     LostFocus="WhatsAppTextBox_LostFocus"
                     PreviewTextInput="WhatsAppTextBox_PreviewTextInput"
                     Loaded="WhatsAppTextBox_Loaded"/>
        </StackPanel>

        <!-- Photoshop Path -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" VerticalAlignment="Center">
            <Label Content="Photoshop Path:" Width="120" VerticalAlignment="Center"/>
            <TextBox x:Name="PhotoshopPathTextBox" Width="280" Height="28" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Button Content="..." Width="30" Height="28" Click="SelectPhotoshopPath_Click"/>
        </StackPanel>

        <!-- CallMeBot API Key -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" VerticalAlignment="Center">
            <Label Content="API Key:" Width="120" VerticalAlignment="Center"/>
            <TextBox x:Name="ApiKeyTextBox" Width="280" Height="28" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Save Button -->
        <Button Grid.Row="8" x:Name="SaveButton" Content="Save" Width="100" Height="30"
                HorizontalAlignment="Right" Margin="0,10,0,0" Click="SaveButton_Click"/>
    </Grid>
</Window>
